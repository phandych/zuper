<h2>Shopping Cart</h2> <%= @shopping_cart %>

<%= form_for :cart_item, url: { action: "update_cart", controller: "cart_items"}, method: :put do %>
<table class="table table-bordered"> 
	<thead> 
		<tr> 
			<th>Product Name</th> 
			<th>Quantity</th> 
			<th>Unit Price</th> 
			<th>Subtotal Row</th> 
		</tr> 
	</thead> 
	<tbody> 
	<% @cart_items.each do |cart_item| %>
		<%= render 'cart', product: cart_item.product, cart_item: cart_item %>
		<% end %>
	</tbody> 
</table>
<div class="row">
	<div class="col-md-8"></div>
	<div class="col-md-4 col-md-offset">
		<table class="table table-hover"> 
			<tbody> 
				<tr> 
					<th scope="row">Subtotal</th> <td><%= number_to_currency current_cart.cart_items.sum(:row_subtotal) %></td> 
				</tr> 
				<tr> 
					<th scope="row">Shipping</th> <td>Gratis</td>
				</tr> 
				<tr> 
					<th scope="row">Subtotal</th> <td><%= number_to_currency current_cart.cart_items.sum(:row_subtotal) %></td> 
				</tr> 
			</tbody> 
		</table>
	</div>	
</div>
<%= submit_tag "Update" %>
<% end %>
